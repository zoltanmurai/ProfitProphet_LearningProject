<Window x:Class="ProfitProphet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="ProfitProphet"
        Height="850" Width="1500"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource PrimaryBackground}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <!-- Bal oldali panel -->
            <ColumnDefinition Width="*"/>
            <!-- Jobb oldali tartalom -->
        </Grid.ColumnDefinitions>

        <!-- Bal panel: Watchlist -->
        <Grid Grid.Column="0" Background="{DynamicResource SecondaryBackground}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Fejléc -->
                <RowDefinition Height="*"/>
                <!-- Lista -->
                <RowDefinition Height="Auto"/>
                <!-- Gomb -->
            </Grid.RowDefinitions>

            <!-- Fejléc -->
            <TextBlock Text="WATCHLIST"
               Foreground="{DynamicResource SecondaryText}"
               FontSize="16"
               FontWeight="Bold"
               Margin="16,12,16,8"/>

            <!-- Lista -->
            <ListBox Grid.Row="1"
                 x:Name="WatchlistListBox"
                 ItemsSource="{Binding Watchlist}"
                 SelectedValue="{Binding SelectedSymbol, Mode=TwoWay}"
                 SelectedValuePath="Symbol"
                 Background="{DynamicResource PrimaryBackground}"
                 Foreground="{DynamicResource PrimaryText}"
                 BorderThickness="0"
                 Margin="10,0,10,10"
                 Padding="5"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 PreviewMouseRightButtonDown="WatchlistListBox_PreviewMouseRightButtonDown">

                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Margin" Value="0,2"/>
                        <Setter Property="Padding" Value="8"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="row"
                                        Background="{DynamicResource PrimaryBackground}"
                                        CornerRadius="4"
                                        Padding="8"
                                        BorderThickness="2">

                                        <!-- Border Style a HasSignal trigger kezeléséhez -->
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="BorderBrush" Value="Transparent"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsNewSignal}" Value="True">
                                                        <Setter Property="BorderBrush" Value="Orange"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <ContentPresenter Grid.Column="0"/>

                                            <TextBlock Grid.Column="1" 
                                               Text="{Binding SignalType}" 
                                               Foreground="Orange" 
                                               FontSize="11" 
                                               FontWeight="Bold" 
                                               VerticalAlignment="Center" 
                                               Margin="10,0,0,0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding HasSignal}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                    </Border>

                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="row" Property="Background" Value="{DynamicResource ListBoxSelectedBackground}"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="row" Property="Background" Value="{DynamicResource ButtonHoverBackground}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Symbol}" FontWeight="Bold" FontSize="14"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>

                <ListBox.ContextMenu>
                    <ContextMenu Background="{DynamicResource SecondaryBackground}" 
                                 BorderBrush="{DynamicResource BorderBrush}">
                        <MenuItem Header="Remove from Watchlist" 
                                  Click="RemoveMenuItem_Click"
                                  Foreground="{DynamicResource PrimaryText}"
                                  Background="{DynamicResource SecondaryBackground}"/>
                    </ContextMenu>
                </ListBox.ContextMenu>

            </ListBox>

            <!-- + Gomb -->
            <Button Grid.Row="2"
                Content="+ Add Symbol"
                Command="{Binding AddSymbolCommand}"
                Margin="10"
                Padding="8,6"
                FontWeight="Bold"
                Foreground="White"  Background="{DynamicResource AccentBrush}"
                BorderBrush="{DynamicResource AccentBrush}"
                Cursor="Hand"
                Height="38">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                    Background="{TemplateBinding Background}"
                    CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{DynamicResource ButtonHoverBackground}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#1e40af"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <!--  Jobb oldal: Toolbar + Chart -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0"
                Background="{DynamicResource SecondaryBackground}"
                Height="50"
                VerticalAlignment="Top"
                LastChildFill="True">
                <Button Width="46"
                    Height="46"
                    DockPanel.Dock="Right"
                    Command="{Binding OpenSettingsCommand}"
                    Background="Transparent"
                    BorderThickness="0"
                    ToolTip="Settings"
                    Cursor="Hand"
                    Margin="0,0,10,0">
                    <Image Source="{DynamicResource SettingsIconSource}"
                        Stretch="Uniform"
                        Width="42" Height="42"/>
                </Button>

                <!--<Button Content="🧪 Test Alert" 
                    Command="{Binding TestAlertCommand}"
                    Margin="5"
                    Padding="10,5"
                    Background="#ff6b35"
                    Foreground="{DynamicResource PrimaryText}"
                    BorderThickness="0"
                    Cursor="Hand"/>-->

                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">

                    <Button Content="Frissítés"
                        Command="{Binding RefreshNowCommand}"
                        Height="28"
                        Padding="12,0"
                        Margin="0,0,10,0"
                        Foreground="White" Background="{DynamicResource AccentBrush}"
                        BorderBrush="{DynamicResource AccentBrush}"
                        Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="IsEnabled" Value="True"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsRefreshing}" Value="True">
                                        <Setter Property="IsEnabled" Value="False"/>
                                        <Setter Property="Background" Value="#1e40af"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <CheckBox Content="Auto" 
                              IsChecked="{Binding AutoRefreshEnabled}" 
                              VerticalAlignment="Center" 
                              Foreground="{DynamicResource SecondaryText}" 
                              Margin="0,0,8,0"/>

                    <Grid VerticalAlignment="Center" Margin="0,0,15,0">

                        <TextBox Width="55"
                             Text="{Binding RefreshIntervalMinutes, UpdateSourceTrigger=PropertyChanged}"
                             VerticalAlignment="Center"
                             Background="{DynamicResource PrimaryBackground}"
                             Foreground="{DynamicResource PrimaryText}"
                             BorderBrush="{DynamicResource BorderBrush}"
                             TextAlignment="Center"
                             Padding="0,0,25,0"/>

                        <TextBlock Text="perc"
                           IsHitTestVisible="False"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Margin="0,0,6,0"
                           Foreground="{DynamicResource PrimaryText}"
                           FontSize="11"/>
                    </Grid>

                    <TextBlock Text="{Binding SelectedSymbol}" 
                               VerticalAlignment="Center" 
                               Foreground="{DynamicResource PrimaryText}" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="0,0,15,0"/>

                    <ComboBox x:Name="IntervalCombo"
                  Width="70" Height="28"
                  ItemsSource="{Binding Intervals}"
                  SelectedValue="{Binding SelectedInterval, Mode=TwoWay}"
                  DisplayMemberPath="Display"
                  SelectedValuePath="Tag"
                  Margin="0,0,15,0"
                  Cursor="Hand"
                  Padding="4,2"
                  ToolTip="Válassz idősíkot">

                        <ComboBox.Style>
                            <Style TargetType="ComboBox">
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                                <Setter Property="Background" Value="{DynamicResource SecondaryBackground}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Padding" Value="4,2"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ComboBox">
                                            <Grid>
                                                <ToggleButton x:Name="ToggleButton"
                                        Focusable="False"
                                        ClickMode="Press"
                                        IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="1"
                                        Cursor="Hand" Margin="0,0,-20,0">

                                                    <Grid Margin="45,0,0,0">
                                                        <Border x:Name="Bd"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="1"
                                                CornerRadius="4"
                                                Padding="0,0,10,0"/>
                                                        <Path x:Name="Arrow"
                                                Data="M 0 0 L 4 4 L 8 0 Z"
                                                Fill="{DynamicResource PrimaryText}"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                Width="8" Height="8"/>
                                                    </Grid>
                                                </ToggleButton>

                                                <ContentPresenter Margin="8,0,25,0"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"
                                        RecognizesAccessKey="True"
                                        Content="{TemplateBinding SelectionBoxItem}"
                                        ContentStringFormat="{TemplateBinding SelectionBoxItemStringFormat}"
                                        ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                        ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />

                                                <Popup x:Name="PART_Popup"
                                        Placement="Bottom"
                                        IsOpen="{TemplateBinding IsDropDownOpen}"
                                        AllowsTransparency="True"
                                        Focusable="False"
                                        PopupAnimation="Fade"
                                        StaysOpen="False"
                                        Width="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                                    <Border x:Name="DropDownBorder"
                                            Background="{DynamicResource SecondaryBackground}"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            SnapsToDevicePixels="True"
                                            Padding="2">
                                                        <ScrollViewer Margin="0" SnapsToDevicePixels="True">
                                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                                        </ScrollViewer>
                                                    </Border>
                                                </Popup>
                                            </Grid>

                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource ButtonHoverBackground}"/>
                                                </Trigger>
                                                <Trigger Property="IsDropDownOpen" Value="True">
                                                    <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                                    <Setter TargetName="Arrow" Property="RenderTransform">
                                                        <Setter.Value>
                                                            <RotateTransform Angle="180"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ComboBox.Style>

                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                                <Setter Property="Background" Value="{DynamicResource SecondaryBackground}"/>
                                <Setter Property="Padding" Value="6,4"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ComboBoxItem">
                                            <Border x:Name="row" Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="row" Property="Background" Value="{DynamicResource ButtonHoverBackground}"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="row" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>

                </StackPanel>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="Stratégia Teszt" 
                        Command="{Binding OpenStrategyTestCommand}" 
                        Margin="0,0,10,0" Padding="10,5" Height="28"
                        Background="{DynamicResource TertiaryBackground}"  
                        Foreground="{DynamicResource PrimaryText}" 
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"/>

                    <Grid Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,0">

                        <ComboBox x:Name="IndicatorsCombo" 
                            Width="95" Height="28"
                            ItemsSource="{Binding ChartVM.AvailableIndicatorTypes}"
                            SelectedItem="{Binding ChartVM.SelectedIndicatorType, Mode=TwoWay}"
                            ToolTip="Válassz indikátort"
                            Cursor="Hand"
                            Padding="4,2">

                            <ComboBox.Style>
                                <Style TargetType="ComboBox">
                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                                    <Setter Property="Background" Value="{DynamicResource SecondaryBackground}"/>
                                    <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Padding" Value="4,2"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ComboBox">
                                                <Grid>
                                                    <ToggleButton x:Name="ToggleButton"
                                                        Focusable="False"
                                                        ClickMode="Press"
                                                        IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="1"
                                                        Cursor="Hand">
                                                        <Grid Margin="65,0,0,0">
                                                            <Border x:Name="Bd"
                                                                Background="{TemplateBinding Background}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="1"
                                                                CornerRadius="4"
                                                                Padding="0,0,10,0"/>
                                                            <Path x:Name="Arrow"
                                                                Data="M 0 0 L 4 4 L 8 0 Z"
                                                                Fill="{DynamicResource PrimaryText}"
                                                                HorizontalAlignment="Left"
                                                                VerticalAlignment="Top"
                                                                Width="8" Height="8"/>
                                                        </Grid>
                                                    </ToggleButton>
                                                    <ContentPresenter Margin="8,0,28,0"
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Left"
                                                        RecognizesAccessKey="True"
                                                        Content="{TemplateBinding SelectionBoxItem}"
                                                        ContentStringFormat="{TemplateBinding SelectionBoxItemStringFormat}"
                                                        ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                        ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                    <Popup x:Name="PART_Popup"
                                                        Placement="Bottom"
                                                        IsOpen="{TemplateBinding IsDropDownOpen}"
                                                        AllowsTransparency="True"
                                                        Focusable="False"
                                                        PopupAnimation="Fade"
                                                        StaysOpen="False"
                                                        Width="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                                        <Border x:Name="DropDownBorder"
                                                            Background="{DynamicResource SecondaryBackground}"
                                                            BorderBrush="{DynamicResource BorderBrush}"
                                                            BorderThickness="1"
                                                            CornerRadius="4"
                                                            SnapsToDevicePixels="True"
                                                            Padding="2">
                                                            <ScrollViewer Margin="0" SnapsToDevicePixels="True">
                                                                <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                                            </ScrollViewer>
                                                        </Border>
                                                    </Popup>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource ButtonHoverBackground}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsDropDownOpen" Value="True">
                                                        <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                                        <Setter TargetName="Arrow" Property="RenderTransform">
                                                            <Setter.Value>
                                                                <RotateTransform Angle="180"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ComboBox.Style>

                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                                    <Setter Property="Background" Value="{DynamicResource SecondaryBackground}"/>
                                    <Setter Property="Padding" Value="6,4"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ComboBoxItem">
                                                <Border x:Name="row" Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="row" Property="Background" Value="{DynamicResource ButtonHoverBackground}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="row" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>

                        <TextBlock Text="Indikátorok..."
                            IsHitTestVisible="False"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Margin="9,0,0,0"
                            Foreground="{DynamicResource PrimaryText}"
                            FontSize="12">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=IndicatorsCombo, Path=SelectedIndex}" Value="-1">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                    </Grid>

                    <ScrollViewer Grid.Column="2" 
                      HorizontalScrollBarVisibility="Hidden" 
                      VerticalScrollBarVisibility="Disabled" 
                      PanningMode="HorizontalOnly"
                      VerticalAlignment="Center">

                        <ItemsControl x:Name="IndicatorChips" 
                            DataContext="{Binding ChartVM}"
                            ItemsSource="{Binding Indicators}">

                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="6,2" Margin="0,0,6,0" CornerRadius="8" 
                                        BorderBrush="{DynamicResource BorderBrush}" 
                                        BorderThickness="1" 
                                        Background="{DynamicResource TertiaryBackground}" 
                                        Height="28">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Button Content="{Binding DisplayLabel}" 
                                                    Command="{Binding DataContext.EditIndicatorCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                                    CommandParameter="{Binding}"
                                                    Background="Transparent" 
                                                    BorderThickness="0" 
                                                    Foreground="{DynamicResource PrimaryText}" 
                                                    FontSize="12" 
                                                    FontWeight="SemiBold" 
                                                    Padding="0"/>
                                            <Button Content="×" 
                                                    Command="{Binding DataContext.DeleteIndicatorCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                                    CommandParameter="{Binding}"
                                                    Width="16" Height="16" 
                                                    Margin="6,0,0,0" 
                                                    Background="Transparent" 
                                                    BorderThickness="0" 
                                                    Foreground="#ff6b6b" 
                                                    Padding="0" 
                                                    VerticalContentAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                </Grid>

            </DockPanel>


            <!-- Chart -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1187*"/>

                </Grid.ColumnDefinitions>

                <Border Grid.Row="0"
                    Margin="8"
                    CornerRadius="8"
                    BorderThickness="1"
                    BorderBrush="{DynamicResource BorderBrush}"
                    Background="{DynamicResource TertiaryBackground}">
                    <oxy:PlotView x:Name="ChartView"
                        Model="{Binding ChartVM.ChartModel}"
                        Background="{DynamicResource PrimaryBackground}"
                        IsManipulationEnabled="True"
                        ZoomRectangleCursor="SizeNWSE"
                        Grid.ColumnSpan="2"
                        Controller="{Binding ChartPlotController}"
                        ContextMenu="{x:Null}" 
                        Margin="0,0,0,0"
                        MouseMove="ChartView_MouseMove"
                        MouseEnter="ChartView_MouseEnter"
                        MouseLeave="ChartView_MouseLeave">
                    </oxy:PlotView>
                </Border>

                <TextBlock Text="No data available. Please add a symbol to the watchlist."
                    Foreground="{DynamicResource PrimaryText}"
                    FontSize="16"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Grid.ColumnSpan="2">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ChartVM.HasChartData}" Value="False">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Grid>
    </Grid>
</Window>
