<Window x:Class="ProfitProphet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="ProfitProphet"
        Height="850" Width="1500"
        WindowStartupLocation="CenterScreen"
        Background="#0e1117">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <!-- Bal oldali panel -->
            <ColumnDefinition Width="*"/>
            <!-- Jobb oldali tartalom -->
        </Grid.ColumnDefinitions>

        <!-- Bal panel: Watchlist -->
        <Grid Grid.Column="0" Background="#161b22">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Fejléc -->
                <RowDefinition Height="*"/>
                <!-- Lista -->
                <RowDefinition Height="Auto"/>
                <!-- Gomb -->
            </Grid.RowDefinitions>

            <!-- Fejléc -->
            <TextBlock Text="WATCHLIST"
               Foreground="#a5b1c2"
               FontSize="16"
               FontWeight="Bold"
               Margin="16,12,16,8"/>

            <!-- Lista -->
            <ListBox Grid.Row="1"
                 x:Name="WatchlistListBox"
                 ItemsSource="{Binding Watchlist}"
                 SelectedItem="{Binding SelectedSymbol, Mode=TwoWay}"
                 Background="#0e1117"
                 Foreground="White"
                 BorderThickness="0"
                 Margin="10,0,10,10"
                 Padding="5"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 PreviewMouseRightButtonDown="WatchlistListBox_PreviewMouseRightButtonDown">

                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Margin" Value="0,2"/>
                        <Setter Property="Padding" Value="8"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="row"
                                Background="#0e1117"
                                CornerRadius="4"
                                Padding="8">
                                        <ContentPresenter />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="row" Property="Background" Value="#2563eb"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="row" Property="Background" Value="#1f2937"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>

                <!-- Jobb klikkes menü -->
                <ListBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Remove from Watchlist"
                      Click="RemoveMenuItem_Click" />
                    </ContextMenu>
                </ListBox.ContextMenu>
            </ListBox>

            <!-- + Gomb -->
            <Button Grid.Row="2"
                Content="+ Add Symbol"
                Command="{Binding AddSymbolCommand}"
                Margin="10"
                Padding="8,6"
                FontWeight="Bold"
                Foreground="White"
                Background="#2563eb"
                BorderBrush="#2563eb"
                Cursor="Hand"
                Height="38">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                    Background="{TemplateBinding Background}"
                    CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#1f2937"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#1e40af"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <!--  Jobb oldal: Toolbar + Chart -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Toolbar -->
            <DockPanel Grid.Row="0"
                Background="#161b22"
                Height="Auto" MinHeight="50"
                VerticalAlignment="Top"
                LastChildFill="False"
                Margin="0,0,0,2">

                <!-- Settings ikon -->
                <Button Width="71"
                    Height="46"
                    DockPanel.Dock="Right"
                    Command="{Binding OpenSettingsCommand}"
                    Background="Transparent"
                    BorderThickness="0"
                    ToolTip="Settings"
                    Cursor="Hand">
                    <Image Source="/Assets/settings_black.png"
                        Stretch="Uniform"
                        Width="40" Height="40"/>
                </Button>

                <!--  Frissítés blokk -->
                <StackPanel DockPanel.Dock="Left"
                    Orientation="Horizontal"
                    Margin="12,0,0,0"
                    VerticalAlignment="Center">

                    <Button Content="Frissítés"
                        Command="{Binding RefreshNowCommand}"
                        Height="28"
                        Padding="12,2"
                        Margin="0,0,10,0"
                        Foreground="White"
                        Background="#2563eb"
                        BorderBrush="#2563eb"
                        Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="IsEnabled" Value="True"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsRefreshing}" Value="True">
                                        <Setter Property="IsEnabled" Value="False"/>
                                        <Setter Property="Background" Value="#1e40af"/>
                                        <Setter Property="BorderBrush" Value="#1e40af"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <CheckBox Content="Automatikus frissítés"
                        IsChecked="{Binding AutoRefreshEnabled}"
                        VerticalAlignment="Center"
                        Foreground="#a5b1c2"
                        Margin="0,0,10,0"/>

                    <TextBlock Text="Intervallum (perc):"
                        VerticalAlignment="Center"
                        Foreground="#a5b1c2"
                        Margin="0,0,6,0"/>

                    <TextBox Width="60"
                        VerticalAlignment="Center"
                        Text="{Binding RefreshIntervalMinutes, UpdateSourceTrigger=PropertyChanged}"
                        Background="#0e1117"
                        Foreground="White"
                        BorderBrush="#2c2f33"
                        Margin="0,0,10,0"/>

                    <TextBlock Text="Frissítés folyamatban…"
                        Margin="8,0,0,0"
                        VerticalAlignment="Center"
                        Foreground="#a5b1c2">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsRefreshing}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <!-- Szimbólum  -->
                <TextBlock Text="{Binding SelectedSymbol}"
                    DockPanel.Dock="Left"
                    VerticalAlignment="Center"
                    Foreground="White"
                    FontSize="20"
                    FontWeight="Bold"
                    Margin="20,0,20,0"/>

                <ComboBox Width="100"
                    ItemsSource="{Binding Intervals}"
                    SelectedValue="{Binding SelectedInterval, Mode=TwoWay}"
                    DisplayMemberPath="Display"
                    SelectedValuePath="Tag"
                    Margin="0,0,10,0"
                    DockPanel.Dock="Left"
                    Cursor="Hand" Padding="4,2,4,2">

                    <!-- ComboBox sötét -->
                    <ComboBox.Style>
                        <Style TargetType="ComboBox">
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Background" Value="#161b22"/>
                            <Setter Property="BorderBrush" Value="#2c2f33"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Padding" Value="4,2"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ComboBox">
                                        <Grid>
                                            <!-- ToggleButton a lenyitáshoz -->
                                            <ToggleButton x:Name="ToggleButton"
                                                Focusable="False"
                                                ClickMode="Press"
                                                IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="1"
                                                Cursor="Hand">
                                                <Grid Margin="70,0,0,0">
                                                    <Border x:Name="Bd"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="1"
                                                        CornerRadius="4" Padding="0,0,10,0"/>
                                                    <Path x:Name="Arrow"
                                                        Data="M 0 0 L 4 4 L 8 0 Z"
                                                        Fill="White"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Top"
                                                        Width="8" Height="8"/>
                                                </Grid>
                                            </ToggleButton>

                                            <!-- Kijelzett érték -->
                                            <ContentPresenter Margin="8,0,28,0"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Left"
                                                RecognizesAccessKey="True"
                                                Content="{TemplateBinding SelectionBoxItem}"
                                                ContentStringFormat="{TemplateBinding SelectionBoxItemStringFormat}"
                                                ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />

                                            <!-- Lenyíló lista -->
                                            <Popup x:Name="PART_Popup"
                                                Placement="Bottom"
                                                IsOpen="{TemplateBinding IsDropDownOpen}"
                                                AllowsTransparency="True"
                                                Focusable="False"
                                                PopupAnimation="Fade"
                                                StaysOpen="False"
                                                Width="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                                <Border x:Name="DropDownBorder"
                                                    Background="#161b22"
                                                    BorderBrush="#2c2f33"
                                                    BorderThickness="1"
                                                    CornerRadius="4"
                                                    SnapsToDevicePixels="True"
                                                    Padding="2">
                                                    <ScrollViewer Margin="0" SnapsToDevicePixels="True">
                                                        <StackPanel IsItemsHost="True"
                                                    KeyboardNavigation.DirectionalNavigation="Contained" />
                                                    </ScrollViewer>
                                                </Border>
                                            </Popup>
                                        </Grid>

                                        <!-- Triggerek -->
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="BorderBrush" Value="#1f2937"/>
                                            </Trigger>
                                            <Trigger Property="IsDropDownOpen" Value="True">
                                                <Setter TargetName="Bd" Property="BorderBrush" Value="#2563eb"/>
                                                <Setter TargetName="Arrow" Property="RenderTransform">
                                                    <Setter.Value>
                                                        <RotateTransform Angle="180"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ComboBox.Style>

                    <!-- Lenyíló elemek stílusa -->
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Background" Value="#161b22"/>
                            <Setter Property="Padding" Value="6,4"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ComboBoxItem">
                                        <Border x:Name="row"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="3"
                                            Padding="{TemplateBinding Padding}">
                                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="row" Property="Background" Value="#1f2937"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="row" Property="Background" Value="#2563eb"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>



                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Height="50" Width="627" MinWidth="50" MinHeight="50" >
                    <!-- Indikátor kiválasztó -->
                    <ComboBox x:Name="IndicatorsCombo"
                        SelectedIndex="-1"
                        Width="100"
                        ItemsSource="{Binding ChartVM.AvailableIndicatorTypes}"
                        SelectedItem="{Binding ChartVM.SelectedIndicatorType, Mode=TwoWay}"
                        Margin="8,0,10,0"
                        ToolTip="Válassz indikátort"
                        Cursor="Hand"
                        Padding="4,2">

                        <!-- ComboBox sötét stílus -->
                        <ComboBox.Style>
                            <Style TargetType="ComboBox">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Background" Value="#161b22"/>
                                <Setter Property="BorderBrush" Value="#2c2f33"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Padding" Value="4,2"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ComboBox">
                                            <Grid>
                                                <!-- ToggleButton a lenyitáshoz -->
                                                <ToggleButton x:Name="ToggleButton"
                                                    Focusable="False"
                                                    ClickMode="Press"
                                                    IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="1"
                                                    Cursor="Hand" Margin="0,0,-20,0">
                                                    <Grid Margin="70,0,0,0">
                                                        <Border x:Name="Bd"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="1"
                                                            CornerRadius="4"
                                                            Padding="0,0,10,0"/>
                                                        <Path x:Name="Arrow"
                                                            Data="M 0 0 L 4 4 L 8 0 Z"
                                                            Fill="White"
                                                            HorizontalAlignment="Left"
                                                            VerticalAlignment="Top"
                                                            Width="8" Height="8"/>
                                                    </Grid>
                                                </ToggleButton>

                                                <TextBlock Text="Indikátorok..."
                                                    Margin="8,0,0,0"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Left"
                                                    Foreground="White" Width="76"/>
                                                <!-- Lenyíló lista -->
                                                <Popup x:Name="PART_Popup"
                                                    Placement="Bottom"
                                                    IsOpen="{TemplateBinding IsDropDownOpen}"
                                                    AllowsTransparency="True"
                                                    Focusable="False"
                                                    PopupAnimation="Fade"
                                                    StaysOpen="False"
                                                    Width="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                                    <Border x:Name="DropDownBorder"
                                                        Background="#161b22"
                                                        BorderBrush="#2c2f33"
                                                        BorderThickness="1"
                                                        CornerRadius="4"
                                                        SnapsToDevicePixels="True"
                                                        Padding="2">
                                                        <ScrollViewer Margin="0" SnapsToDevicePixels="True">
                                                            <StackPanel IsItemsHost="True"
                                                    KeyboardNavigation.DirectionalNavigation="Contained" />
                                                        </ScrollViewer>
                                                    </Border>
                                                </Popup>
                                            </Grid>

                                            <!-- Triggerek -->
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bd" Property="BorderBrush" Value="#1f2937"/>
                                                </Trigger>
                                                <Trigger Property="IsDropDownOpen" Value="True">
                                                    <Setter TargetName="Bd" Property="BorderBrush" Value="#2563eb"/>
                                                    <Setter TargetName="Arrow" Property="RenderTransform">
                                                        <Setter.Value>
                                                            <RotateTransform Angle="180"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ComboBox.Style>

                        <!-- Lenyíló elemek stílusa -->
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Background" Value="#161b22"/>
                                <Setter Property="Padding" Value="6,4"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ComboBoxItem">
                                            <Border x:Name="row"
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="3"
                                                Padding="{TemplateBinding Padding}">
                                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="row" Property="Background" Value="#2563eb"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="row" Property="Background" Value="#2563eb"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>
                    <!-- Aktív indikátorok -->
                    <ItemsControl  x:Name="IndicatorChips" 
                        DataContext="{Binding ChartVM}"
                        ItemsSource="{Binding Indicators}"
                        Margin="16,0,0,0">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="6" 
                                        Margin="4"
                                        CornerRadius="8" 
                                        BorderBrush="#2c2f33" 
                                        BorderThickness="1"
                                        MinHeight="32"
                                        Background="#1f2937">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <!-- Felirat: kattintás -> EditIndicatorCommand -->
                                        <Button Padding="0"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Command="{Binding DataContext.EditIndicatorCommand,
                                                RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}">
                                            <TextBlock Text="{Binding DisplayLabel}"
                                                FontWeight="SemiBold"
                                                Foreground="White"
                                                FontSize="13"
                                                VerticalAlignment="Center" />
                                        </Button>

                                        <!-- X: törlés, változatlanul -->
                                        <Button Width="20" Height="20"
                                            Margin="8,0,0,0"
                                            Padding="0"
                                            Background="#2c2f33"
                                            BorderThickness="0"
                                            ToolTip="Indikátor törlése"
                                            Command="{Binding DataContext.DeleteIndicatorCommand,
                                               RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}">
                                            <Button.Content>
                                                <TextBlock Text="×"
                                                    FontSize="13"
                                                    Foreground="White"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center" />
                                            </Button.Content>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </DockPanel>


            <!-- Chart -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1187*"/>
                    
                </Grid.ColumnDefinitions>

                <Border Grid.Row="0"
                    Margin="8"
                    CornerRadius="8"
                    BorderThickness="1"
                    BorderBrush="#3A3F4B"
                    Background="#141820">
                    <oxy:PlotView x:Name="ChartView"
                        Model="{Binding ChartVM.ChartModel}"
                        Background="#0e1117"
                        IsManipulationEnabled="True"
                        ZoomRectangleCursor="SizeNWSE"
                        Grid.ColumnSpan="2"
                        Controller="{Binding ChartPlotController}"
                        ContextMenu="{x:Null}" Margin="0,0,0,0">
                            <!-- <oxy:PlotView.ContextMenu>
                            <ContextMenu> -->
                            <!--MenuItem Header="Add EMA (20)" Command="{Binding AddEma20Command}" / -->
                            <!--  <MenuItem Header="Remove All Indicators" Command="{Binding ClearIndicatorsCommand}" />
                            </ContextMenu>
                        </oxy:PlotView.ContextMenu> -->
                    </oxy:PlotView>
                </Border>

                <TextBlock Text="No data available. Please add a symbol to the watchlist."
                    Foreground="White"
                    FontSize="16"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Grid.ColumnSpan="2">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ChartVM.HasChartData}" Value="False">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Grid>
    </Grid>
</Window>
