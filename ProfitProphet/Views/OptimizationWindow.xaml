<Window x:Class="ProfitProphet.Views.OptimizationWindow"
        xmlns:conv="clr-namespace:ProfitProphet.Converters"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:ProfitProphet.Converters"
        mc:Ignorable="d"
        Title="Stratégia Optimalizálás" Height="450" Width="600" Background="#1E1E1E" Foreground="White">

    <Window.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Válaszd ki az optimalizálandó paramétereket" FontSize="18" Margin="0,0,0,10"/>

        <ScrollViewer Grid.Row="1" Margin="0,10">
            <ItemsControl ItemsSource="{Binding AvailableParameters}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#333" BorderThickness="0,0,0,1" Padding="5">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding Name}" Width="150" VerticalAlignment="Center"/>
                                <TextBlock Text="Min:" VerticalAlignment="Center" Margin="10,0,5,0" Foreground="Gray"/>
                                <TextBox Text="{Binding MinValue}" Width="40" Background="#2D2D30" Foreground="White"/>
                                <TextBlock Text="Max:" VerticalAlignment="Center" Margin="10,0,5,0" Foreground="Gray"/>
                                <TextBox Text="{Binding MaxValue}" Width="40" Background="#2D2D30" Foreground="White"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <ProgressBar x:Name="OptiProgress" Width="200" Height="20" Margin="0,0,20,0" Visibility="{Binding IsRunning, Converter={StaticResource BoolToVis}}"/>
            <Button Content="INDÍTÁS" Command="{Binding RunOptimizationCommand}" Width="120" Height="35" Background="#007ACC" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>

    <!--<ProgressBar Grid.Row="2" 
                 IsIndeterminate="True" 
                 Width="200" Height="15" 
                 Visibility="{Binding IsRunning, Converter={StaticResource BoolToVis}}"/>-->
</Window>