<Window x:Class="ProfitProphet.Views.OptimizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Stratégia Optimalizálás Beállítása" Height="500" Width="700" 
        Background="{DynamicResource PrimaryBackground}" 
        Foreground="{DynamicResource PrimaryText}"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource TertiaryBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Optimalizációs Tartományok" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="{DynamicResource AccentBrush}"/>
            <TextBlock Text="Válaszd ki, mely paramétereket akarod optimalizálni, és add meg a határokat." 
                       FontSize="12" 
                       Foreground="{DynamicResource SecondaryText}" 
                       Margin="0,5,0,0"/>
        </StackPanel>

        <Border Grid.Row="1" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="1" 
                Background="{DynamicResource SecondaryBackground}" 
                Padding="5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding AvailableParameters}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="{DynamicResource BorderBrush}" 
                                    BorderThickness="0,0,0,1" 
                                    Padding="5,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="180"/>
                                        <ColumnDefinition Width="60"/>

                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="50"/>

                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="50"/>

                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="50"/>
                                    </Grid.ColumnDefinitions>

                                    <CheckBox Grid.Column="0" 
                                              IsChecked="{Binding IsSelected}" 
                                              VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding Name}" 
                                               VerticalAlignment="Center" 
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource PrimaryText}"
                                               TextTrimming="CharacterEllipsis" 
                                               ToolTip="{Binding Name}"/>

                                    <StackPanel Grid.Column="2" 
                                                Orientation="Horizontal" 
                                                VerticalAlignment="Center">
                                        <TextBlock Text="(" Foreground="{DynamicResource SecondaryText}"/>
                                        <TextBlock Text="{Binding CurrentValue}" Foreground="#FFD700"/>
                                        <TextBlock Text=")" Foreground="{DynamicResource SecondaryText}"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="3" 
                                               Text="Min:" 
                                               VerticalAlignment="Center" 
                                               Foreground="{DynamicResource SecondaryText}" 
                                               Margin="5,0,2,0"/>
                                    <TextBox Grid.Column="4" 
                                             Text="{Binding MinValue}" 
                                             IsEnabled="{Binding IsSelected}" 
                                             Margin="0,0,5,0"/>

                                    <TextBlock Grid.Column="5" 
                                               Text="Max:" 
                                               VerticalAlignment="Center" 
                                               Foreground="{DynamicResource SecondaryText}" 
                                               Margin="5,0,2,0"/>
                                    <TextBox Grid.Column="6" 
                                             Text="{Binding MaxValue}" 
                                             IsEnabled="{Binding IsSelected}" 
                                             Margin="0,0,5,0"/>

                                    <TextBlock Grid.Column="7" 
                                               Text="Lépés:" 
                                               VerticalAlignment="Center" 
                                               Foreground="{DynamicResource SecondaryText}" 
                                               Margin="10,0,2,0"/>
                                    <TextBox Grid.Column="8" 
                                             Text="{Binding Step}" 
                                             Width="40" 
                                             Background="{DynamicResource TertiaryBackground}" 
                                             Foreground="{DynamicResource AccentBrush}" 
                                             FontWeight="Bold"
                                             BorderBrush="{DynamicResource BorderBrush}" 
                                             Padding="2"
                                             ToolTip="Ennyivel növelje a számot (pl. 1 vagy 5 vagy 10)"/>

                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,15,0,0">
            <Button Content="Mégse" 
                    Command="{Binding CancelCommand}" 
                    Width="100" 
                    Height="30" 
                    Margin="0,0,10,0" 
                    Background="{DynamicResource TertiaryBackground}" 
                    Foreground="{DynamicResource PrimaryText}"
                    BorderBrush="{DynamicResource BorderBrush}"/>

            <Button Content="BEÁLLÍTÁS KÉSZ (OK)" 
                    Command="{Binding OkCommand}" 
                    Width="150" 
                    Height="30" 
                    Background="{DynamicResource AccentBrush}" 
                    Foreground="{DynamicResource PrimaryText}" 
                    FontWeight="Bold"
                    BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
